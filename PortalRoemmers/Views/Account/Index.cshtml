<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" type="image/png" sizes="16x16" href="../Content/plugins/images/roemmers_R.png">

    <title>@ViewBag.titulo</title>

    <!-- Bootstrap Core CSS -->
    <link href="~/Content/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- animation CSS -->
    <link href="~/Content/css/animate.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <!-- color CSS -->
    <link href="~/Content/css/colors/default.css" rel="stylesheet" />
</head>
<body>
    <!-- Preloader -->
    <div class="preloader">
        <div class="cssload-speeding-wheel"></div>
    </div>
    
    <section id="wrapper" class="new-login-register block1">
        <div class="lg-info-panel">
            <div class="inner-panel text-center">
                <form style="width:100%;height:45%;"></form>
                <h2 style="text-align:center">
                    <img src="../Content/plugins/images/ROEMMERS_MEGA.png" alt="Home" class="text-center">
                </h2>
                            <!--<a href="javascript:void(0)" class="p-20 di">
                    <img src="../Content/plugins/images/roemmers_R.png">
                </a>
                <div class="lg-content">
                <h2>Laboratorios Roemmers</h2>
                <p class="text-muted">
                <!--Conciencia por la vida
                </p>
                </div>-->
            </div>
        </div>
        <div class="new-login-box">
            <div class="white-box">
                <h3 class="box-title m-b-0">Acceso Sistema Megalabs</h3>
                <small>Ingrese sus datos a continuaci&oacuten</small>
                <br />
                <form class="form-horizontal new-lg-form" id="loginform" action="/Account/Login" method="post">
                    <div class="form-group  m-t-20">
                        <div class="col-xs-12">
                            <label>Usuario</label>
                            <input class="form-control" type="text" required="" placeholder="Usuario" name="username" id="usernameI">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <label>Contrase&ntildea</label>
                            <input class="form-control" type="password" required="" placeholder="Contraseña" name="userpass" id="userpassI">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="checkbox checkbox-info pull-left p-t-0">
                                <input id="checkbox-signup" type="checkbox">
                                <label for="checkbox-signup"> Recu&eacuterdame </label>
                            </div>
                            <a href="javascript:void(0)" id="to-recover" class="text-dark pull-right"><i class="fa fa-lock m-r-5"></i> ¿Olvid&oacute su contrase&ntildea?</a>
                        </div>
                    </div>
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            <button class="btn btn-info btn-lg btn-block btn-rounded text-uppercase waves-effect waves-light" type="submit">Entrar</button>
                        </div>
                    </div>

                    <h3 class="text-danger text-center">@ViewBag.Error </h3>

                    <hr class="m-t-10">


                    <p class="text-muted">Ejemplo:</p>
                    <p class="m-t-10">
                        <h4>
                            Correo Megalabs: wjave@megalabs.com.pe<br />
                        </h4>
                    </p>
                    <p class="m-t-5">
                        <h4>
                            Usuarios para ingresar al sistema: <strong>wjave</strong>
                        </h4>
                    </p>
                </form>

                <div class="form-horizontal" id="recoverform">
                    <div class="form-group ">
                        <br />
                        <div id='info' class='alert alert-info hide'></div>
                        <div class="col-xs-12">
                            <h3>Recuperar contraseña</h3>
                            <p class="text-muted">Introduzca su correo electr&oacutenico y las instrucciones se le enviar&aacuten! </p>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input class="form-control" type="text" required="" placeholder="Correo Electrónico" name="email" id="email">
                        </div>
                    </div>
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            <button class="btn btn-primary btn-lg btn-block text-uppercase waves-effect waves-light" onclick="myFunction()">Reiniciar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </section>
    
    <!-- jQuery -->
    <script src="~/Content/plugins/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/Content/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- Menu Plugin JavaScript -->
    <script src="~/Content/plugins/bower_components/sidebar-nav/dist/sidebar-nav.min.js"></script>
    <!--slimscroll JavaScript -->
    <script src="~/Scripts/js/jquery.slimscroll.js"></script>
    <!--Wave Effects -->
    <script src="~/Scripts/js/waves.js"></script>
    <!-- Custom Theme JavaScript -->
    <script src="~/Scripts/js/custom.js"></script>
    <!--BlockUI Script -->
    <script src="~/Content/plugins/bower_components/blockUI/jquery.blockUI.js"></script>


    <script>
        function myFunction() {
            block(); 
           var Mensaje = {};
            Mensaje.url = "/Account/ForgotPassword";
            Mensaje.type = "POST";
            Mensaje.data = JSON.stringify({ email: $("#email").val() });
            Mensaje.datatype = "json";
            Mensaje.contentType = "application/json";
            Mensaje.success = function (data) {

                if (data != "") {
                    $("#info").text(data).removeClass("hide");
                    $("#info").fadeOut(2000).fadeIn(2000).fadeOut(1500).fadeIn(1500).fadeOut(500);
                }
                unblock();
            };
            Mensaje.error = function () {
                alert("Error en conseguir estados!!");
                unblock();
            };
            $.ajax(Mensaje);
           }

        function block() {
            $('section.block1').block({
                message: '<h4><img src="../Content/plugins/images/busy.gif" /> Sólo un momento...</h4>'
                , css: {
                    border: '1px solid #fff'
                }
            });
        }

        function unblock() {
            $('section.block1').unblock();
        }

        $(document).ready(function () {

            $("#usernameI").val(localStorage.getItem('username'));
            $("#userpassI").val(localStorage.getItem('userpass'));
            $("#checkbox-signup").prop('checked', localStorage.getItem('checkbox'));

            $("#checkbox-signup").click(function () {

                if ($(this).is(':checked')) {
                    // checkbox ha sido seleccionado
                    localStorage.setItem('username', $('#usernameI').val());
                    localStorage.setItem('userpass', $('#userpassI').val());
                    localStorage.setItem('checkbox', 'true');
                } else {
                    // checkbox ha sido deseleccionado
                    localStorage.removeItem('username');
                    localStorage.removeItem('userpass');
                    localStorage.removeItem('checkbox');
                }

            });

            $("#usernameI").change(function () {
                $("#checkbox-signup").prop('checked', false);
                $("#userpassI").val("");
            });
        });

    </script>


</body>
</html>

