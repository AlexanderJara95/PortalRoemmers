                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="col-md-12">@Html.LabelFor(model => model.idPres)</label>
                                                <div class="col-md-12">
                                                    @{
                                                        if (Model.movimiento.Count() != 0)
                                                        {
                                                            foreach (var sol in Model.movimiento)
