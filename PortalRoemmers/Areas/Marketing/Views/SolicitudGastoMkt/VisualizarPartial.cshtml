                                        <div class="form-group">
                                            <label class="col-md-12">Estimaci&oacuten</label>
                                            <div class="col-md-12">
                                                @{
                                                    if (Model.dGas.Count() != 0)
                                                    {
                                                        var est = Model.dGas.Select(y => new { y.actividad.idActiv, y.actividad.estimacion.monEstGas, y.actividad.estimacion.moneda.nomMon }).FirstOrDefault();

                                                        string estima = "N°" + est.idActiv + " | " + est.monEstGas + " " + est.nomMon;

                                                        <input style="border: 0;width: 100%;" value="@estima" readonly="readonly" />
                                                    }
                                                    else
                                                    {
                                                        <input style="border: 0;width: 100%;" value="Ninguno" readonly="readonly" />
                                                    }
                                                }
                                            </div>
                                        </div>
                                    </div>
