@section scripts
{
    @Scripts.Render("~/Bundles/sweetalert_JS")
    @Scripts.Render("~/Bundles/bloqueo_JS")
    <script src="~/Areas/Sistemas/Scripts/Sistemas.js"></script>
    <script src="~/Areas/Marketing/Scripts/Marketing.js"></script>
    <script>
        //------------------------------------------------------
        //D O C U M E N T
        //------------------------------------------------------
        $(document).ready(function () {
            //--Tabla Medicos - Agregar de manera individual
            //medico
            $('#slimtest4M').slimScroll({
                color: '#00f'
                , size: '10px'
                , height: '250px'
                , alwaysVisible: true
            });
            //--
            $('#slimtest4I').slimScroll({
                color: '#00f'
                , size: '10px'
                , height: '250px'
                , alwaysVisible: true
            });
            //--
            $('#tb_medico_Search tbody').on('click', 'tr', function () {
                var duplicado = false;
                var row = "";
                //obtengo el id de la otra tabla
                var id = $("#tb_medico > tbody > tr:last > td:first").text();

                //verifico que no este en la tabla
                var codigo = $(this).find("td").eq(2).text();
                $('#tb_medico tbody tr').each(function (index) {
                    if ($('#tb_medico tbody tr').eq(index).find("td").eq(parseInt(2)).html() == codigo) {
                        duplicado = true;
                    }
                });

                //si esta duplicado muestro un mensaje
                if (duplicado == true) {
                    $("div #danger").removeClass('hidden');
                    $("div #danger").text('No se puede seleccionar el mismo elemento');
                    setTimeout(function () { $("div #danger").fadeOut(2000).fadeIn(2000).fadeOut(1500).fadeIn(1500).fadeOut(500) }, 500);
                    setTimeout(function () { $("div #danger").addClass('hidden'); }, 4000);
                    return false;
                }

                row = "<tr>";
                row += "<td class='text-center'>" + $(this).find("td").eq(0).text() + "</td>";
                row += "<td class='text-center'>" + $(this).find("td").eq(1).text() + "</td>";
                row += "<td class='hidden'>" + $(this).find("td").eq(2).text() + "</td>";
                row += "<td class='elimfila'><span class='glyphicon glyphicon-remove'></span></td>";
                row += "</tr>";
                $("#tb_medico > tbody:last").append(row);

                //$("#responsive-modal-medico").modal('hide');
            });
            //------------------------------------------------
            $('#btnLimpiar').on('click', function () {
                //console.log("Entro btnLimpiar");
                $("#tb_medicosAct > tbody:last").empty();
            });
            //------------------------------------------------
        });
        //------------------------------------------------------
        //F U N C I O N T S
        //------------------------------------------------------
        $("#ImportarMedicos").submit(function (e) {
            $("#tb_medicosAct > tbody:last").empty();
            UploadFile();
            Contador();
            return false;
        });

        function UploadFile() {
            //Llamar al form - upload y crear un FormData con Key
            var form = $('#ImportarMedicos')[0];
            var dataString = new FormData(form);
            //--------------------------
            $.ajax({
                url: '/Actividad/UploadExcel',  //Server script to process data
                type: 'POST',
                // Form data como data
                data: dataString,
                //Ajax events
                success: function (result, status) {
                    //console.log(result + "-" + status);
                    if (result != "EXT" || result != "VACIO") {
                        $.each(result, function (i, item) {
                            //-----------------------------------------------------
                            var id = $("#tb_medicosAct > tbody > tr").length;
                            if(item.ver=='1')
                            {
                                row = "<tr class='danger'>";
                            }
                            if (item.ver == '2')
                            {
                                row = "<tr class='warning'>";
                            }
                            if (item.ver == '3')
                            {
                                row = "<tr class='success'>";
                            }
                            row += "<td class='text-center'>" + item.cmp + "</td>";
                            row += "<td class='text-center'>" + item.nomEsp + "</td>";
                            row += "<td class='text-left'>" + item.nomMedBD + "</td>";
                            row += "<td class='text-left'>" + item.obs + "</td>";
                            row += "<td class='elimfila'><span class='glyphicon glyphicon-remove'></span></td>";
                            row += "<td class='hidden'>" + item.idCli + "</td>";
                            row += "</tr>";
                            $("#tb_medicosAct > tbody:last").append(row);
                            //-----------------------------------------------------
                        });
                    }
                    if (result == "EXT") {
                        swal("Solo el formato Excel esta permitido ... ");
                    }
                    if (result == "VACIO") {
                        swal("No adjunto archivo ... ");
                    }
                    //-----------------------------------
                },
                error: function (err) {
                    alert(err.statusText);
                },

                //Options to tell jQuery not to process data or worry about content-type.
                cache: false,
                contentType: false,
                processData: false
            });

            $("#FileUpload").val('');
        };
        //------------------------------------------------------
        function ImportarLista() {
            console.log("IMPORTAR LISTA");
            $('#tb_medicosAct tbody tr').each(function (index) {
                if ($('#tb_medicosAct tbody tr').eq(index).find("td").eq(parseInt(5)).html() != "") {
                    //----------------------------------------------------
                    var codigo = $('#tb_medicosAct tbody tr').eq(index).find("td").eq(parseInt(5)).text();
                    var duplicado = false;
                    $('#tb_medico tbody tr').each(function (index) {
                        if ($('#tb_medico tbody tr').eq(index).find("td").eq(parseInt(2)).html() == codigo) {
                            duplicado = true;
                        }
                    });
                    if (!duplicado) {
                        //***************************************************
                        row = "<tr>";                       
                        row += "<td class='text-center'>" + $(this).find("td").eq(0).text() + "</td>";
                        row += "<td class='text-center'>" + $(this).find("td").eq(2).text() + "</td>";
                        row += "<td class='hidden'>" + $(this).find("td").eq(5).text() + "</td>";
                        row += "<td class='elimfila'><span class='glyphicon glyphicon-remove'></span></td>";
                        row += "</tr>";
                        $("#tb_medico > tbody:last").append(row);
                        //***************************************************
                    }
                    //----------------------------------------------------
                }

            });
            Contador();
        };
        //------------------------------------------------------
        function Contador() {
            var id = $("#tb_medicosAct > tbody > tr").length;
            cont
            $("#cont").val(id.toString() + " médicos ingresados");
        };
        //------------------------------------------------------
    </script>

