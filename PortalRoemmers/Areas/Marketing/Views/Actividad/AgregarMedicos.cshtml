@model PortalRoemmers.Areas.Marketing.Models.Actividad.ActividadModels
@using PortalRoemmers.Security
@{
    ViewBag.Title = "AgregarMedicos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css {
    @Styles.Render("~/Content/sweetalert_CSS")

}

<!--Importar-->
<div id="responsive-modal-importar" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h2 class="modal-title">Importar Médicos</h2>
            </div>
            <div class="modal-body">
                <div class="row">
                    <form id="ImportarMedicos" enctype="multipart/form-data" method="post">
                        <div id='danger1' class='alert alert-danger hidden'>Ingresar un archivo para importar ...</div>
                        <div class="col-sm-12">
                            <div class="input-group">
                                <div class="control-label text-right">Descarga el formato :</div>
                                <span class="input-group-btn">
                                    <a href="/Actividad/DownloadExcel/"><img src="~/Content/excel.ico" width="25" height="25" title="Descargar el formato de excel" alt="excel" /></a>
                                </span>
                            </div>
                        </div>
                        <div class="col-sm-12 white-box">
                            <div class="input-group">
                                <input type="file" id="FileUpload" name="FileUpload" class="form-control" placeholder="Buscar" required>
                                <span class="input-group-btn">
                                    <input type="submit" value="Adjuntar" id="btnSubmit" class="btn btn-primary" />
                                </span>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="input-group text-center">
                                <span class="input-group-btn">
                                    <button id="btnLimpiar" type="button" class="btn btn-primary">Limpiar</button>
                                </span>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="table-responsive m-t-10" style="clear: both;">
                                <div id="slimtest4I">
                                    <div class="col-sm-12">
                                        <table id="tb_medicosAct" class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th class="text-center">CMP</th>
                                                    <th class="text-center">ESPECIALIDAD</th>
                                                    <th class="text-left">APELLIDOS Y NOMBRES</th>
                                                    <th class="text-left">OBSERVACION </th>
                                                    <th class="text-center"></th>
                                                    <th class="hidden"></th>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-danger waves-effect waves-light" onclick="ImportarLista()" data-dismiss="modal">Importar</button>
            </div>
        </div>
    </div>
</div>
