                    <div class="col-md-12" style="margin-top:14px;">
                        @Html.EditorFor(model => model.fchVenEveAdv, new { htmlAttributes = new { @class = "form-control form-control-line datepicker", @placeholder = "dd/mm/aaaa", @autocomplete = "off", @disabled = "true" } })
                    </div>
                </div>
            </div>
        </div>


        <div id="item3" class="col-md-6 col-md-offset-3">
            <div class="white-box" style="border: 1px solid #dadce0;border-radius: 8px;">
                <h2 class="box-title text-center" style="font-size: 20px;font-weight: 400;"><strong>3. EVENTO ADVERSO </strong> </h2>

                <div class="form-group">
                    <label class="control-label col-md-12" style="font-size: 16px;font-weight: 400;line-height: 24px; text-align: left;">@Html.LabelFor(model => model.desAdvEveAdv): <span class="text-danger">*</span></label>
                    <div class="col-md-12" style="margin-top:14px;">
                        @Html.TextAreaFor(model => model.desAdvEveAdv, new { @class = "form-control form-control-line", @rows = 5, @placeholder = "(describir con las palabras del paciente lo reportado)", @autocomplete = "off", @required = true, @data_error = "Esta pregunta es obligatoria", @disabled = "true" })
