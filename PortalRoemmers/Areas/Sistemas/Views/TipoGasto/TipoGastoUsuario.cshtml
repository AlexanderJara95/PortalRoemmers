@model PortalRoemmers.Areas.Sistemas.Models.Gasto.TipGas_Usu_Models
@using PortalRoemmers.Security

@{
    ViewBag.Title = "TipoGastoUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="white-box p-l-20 p-r-20">
    <h3 class="box-title m-b-0">Usuarios para el Tipo De Gasto</h3>
    <p class="text-muted m-b-30 font-15"><strong>@ViewBag.tipoDeGasto</strong></p>
    <div class="row">
        <div class="col-md-12">
            <div class="form-horizontal form-material">

                @using (Html.BeginForm("AgregarUsuarios", "TipoGasto", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <input id="nombre" name="nombre" type="hidden" value="@ViewBag.tipoDeGasto">
                    <input id="id" name="id" type="hidden" value="@ViewBag.idTipGas">
                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-md-11">Usuarios Disponibles</label>
                            <div class="col-md-11">
                                <input id="filtrar" type="text" placeholder="Buscar" class="form-control">
                            </div>
                            <br />
                            <div class="col-md-1">
                                <button class="btn btn-primary btn-rounded waves-effect waves-light"><i class="fa fa-plus"></i></button>
                            </div>
                            <br />
                            <div class="col-md-11">
                                @Html.DropDownListFor(model => model.idAcc, (SelectList)ViewBag.disponible, htmlAttributes: new { @class = "form-control form-control-line", @multiple = "" })
                            </div>
                        </div>
                    </div>
                }

                @using (Html.BeginForm("EliminarUsuarios", "TipoGasto", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <input id="id" name="id" type="hidden" value="@ViewBag.idTipGas">
                    <input id="nombre" name="nombre" type="hidden" value="@ViewBag.tipoDeGasto">
                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="col-md-11">Usuarios Elegidos</label>
                            <div class="col-md-11">
                                <input id="filtrar2" type="text" placeholder="Buscar" class="form-control">
                            </div>
                            <br />
                            <div class="col-md-1">
                                <button class="btn btn-primary btn-rounded waves-effect waves-light"><i class="fa fa-minus"></i></button>
                            </div>
                            <br />
                            <div class="col-md-11">
                                @Html.DropDownListFor(model => model.idAccN, (SelectList)ViewBag.elegido, htmlAttributes: new { @class = "form-control form-control-line", @multiple = "" })
                            </div>
                        </div>
                    </div>
                }
                <div class="form-group">
                    <div class="col-md-4">
                        <div class="col-xs-6 col-md-4">
                            @Html.ActionLink("Volver", "Index", new { menuArea = SessionPersister.ActiveMenu, menuVista = SessionPersister.ActiveVista, pagina = SessionPersister.Pagina, search = SessionPersister.Search }, new { @Class = "btn btn-block btn-outline btn-rounded btn-default" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script>
        $(document).ready(function () {
            $('#filtrar').keyup(function () {

                var rex = new RegExp($(this).val(), 'i');

                $('#idAcc option').hide();
                $('#idAcc option').filter(function () {
                    return rex.test($(this).text());
                }).show();
            });

            $('#filtrar2').keyup(function () {

                var rex = new RegExp($(this).val(), 'i');

                $('#idAccN option').hide();
                $('#idAccN option').filter(function () {
                    return rex.test($(this).text());
                }).show();
            });
        });
    </script>
}
