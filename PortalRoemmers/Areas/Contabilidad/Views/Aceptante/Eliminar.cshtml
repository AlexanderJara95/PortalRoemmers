@model PortalRoemmers.Areas.Contabilidad.Models.Letra.AceptanteModels
@using PortalRoemmers.Security

@{
    ViewBag.Title = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="white-box p-l-20 p-r-20">
    <h3 class="box-title m-b-0"> Eliminar Aceptante (Cliente) </h3>
    <p class="text-muted m-b-30 font-13">¿Estás seguro que quieres eliminar esto?</p>
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("Eliminar", "Aceptante", FormMethod.Post, new { @class = "form-horizontal form-material" }))
            {
                @Html.HiddenFor(model => model.idAcep)
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label class="col-md-12">@Html.LabelFor(model => model.nomAceptante)</label>
                    <div class="col-md-12">
                        @Html.DisplayFor(model => model.nomAceptante, new { htmlAttributes = new { @class = "form-control form-control-line" } })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-12">@Html.LabelFor(model => model.niffAceptante)</label>
                    <div class="col-md-12">
                        @Html.DisplayFor(model => model.niffAceptante, new { htmlAttributes = new { @class = "form-control form-control-line" } })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-12">@Html.LabelFor(model => model.domAceptante)</label>
                    <div class="col-md-12">
                        @Html.DisplayFor(model => model.domAceptante, new { htmlAttributes = new { @class = "form-control form-control-line" } })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-12">@Html.LabelFor(model => model.locAceptante)</label>
                    <div class="col-md-12">
                        @Html.DisplayFor(model => model.locAceptante, new { htmlAttributes = new { @class = "form-control form-control-line" } })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-12">@Html.LabelFor(model => model.correoAceptante)</label>
                    <div class="col-md-12">
                        @Html.DisplayFor(model => model.correoAceptante, new { htmlAttributes = new { @class = "form-control form-control-line" } })
                    </div>
                </div>
                <button class="btn btn-info btn-rounded btn-outline waves-effect waves-light m-r-10">Eliminar</button>
                @Html.ActionLink("Volver", "Index", new { menuArea = SessionPersister.ActiveMenu, menuVista = SessionPersister.ActiveVista, pagina = SessionPersister.Pagina, search = SessionPersister.Search }, new { @Class = "btn btn-default btn-rounded btn-outline waves-effect waves-light" })

            }
        </div>
    </div>
</div>