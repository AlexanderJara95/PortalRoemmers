@using PortalRoemmers.Security
@model PortalRoemmers.Areas.RRHH.Models.SolicitudRRHH.SolicitudRRHHModels
@{
    ViewBag.Title = "Registrar Solicitud RRHH";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css {
    @Styles.Render("~/Content/autocompletado_CSS")
    @Styles.Render("~/Content/selectBusqueda_CSS")
    @Styles.Render("~/Content/datepicker_CSS")
}
<div class="white-box p-l-20 p-r-20">
    <h3 class="box-title m-b-0"> Nueva Solicitud de Descanso Médico</h3>
    <p class="text-muted m-b-30 font-13">
        Para realizar una solicitud de Descanso Médico, es necesario emitirlo
        con un documento adjunto.
    </p>
    <div id='danger' class='alert alert-danger hidden'></div>
    @{string msg = ""; try { msg = TempData["mensaje"].ToString(); } catch { }}
    @(new HtmlString(msg))
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("Registrar", "DescansoMedRRHH", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal form-material" }))
            {
                @Html.AntiForgeryToken()
                <div class="col-md-12">
                    <section id="wrapper" class="block1">
                        <div class="panel-group" id="exampleAccordionDefault" aria-multiselectable="true" role="tablist">
                            <div class="panel">
                                <div class="row">
                                    <div class="col-md-12 text-center">
                                        <dl>
                                            <dt>DESCANSO MÉDICO DE</dt>
                                            <dd style="color: #2cabe3"><span id="diasTotal"></span> DIAS</dd>
                                        </dl>
                                    </div>
                                </div>
                                <div class="panel-heading" id="exampleHeadingDefaultOne" role="tab"> <a class="panel-title" data-toggle="collapse" href="#exampleCollapseDefaultOne" data-parent="#exampleAccordionDefault" aria-expanded="true" aria-controls="exampleCollapseDefaultOne"> Datos de la Solicitud </a> </div>
                                <div class="panel-collapse collapse in" id="exampleCollapseDefaultOne" aria-labelledby="exampleHeadingDefaultOne" role="tabpanel">
                                    @Html.HiddenFor(model => model.idEstado)
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label class="col-md-12">Tipo de Descanso Médico<span class="text-danger">*</span></label>
                                                    <div class="col-md-12">
                                                        @Html.DropDownListFor(model => model.idSubTipoSolicitudRrhh, (SelectList)ViewBag.SubtipoSoliRrhh, "Seleccionar....", htmlAttributes: new { @class = "form-control form-control-line" })
                                                        @Html.ValidationMessageFor(model => model.idSubTipoSolicitudRrhh, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label class="col-md-12">Diagnóstico</label>
                                                    <div class="col-md-12">
                                                        @Html.EditorFor(model => model.descSolicitud, new { htmlAttributes = new { @class = "form-control form-control-line", @placeholder = "Diagnóstico" } })
                                                        @Html.ValidationMessageFor(model => model.descSolicitud, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6 ">
                                                <div class="form-group">
                                                    <label class="col-md-12">@Html.LabelFor(model => model.fchIniSolicitud)</label>
                                                    <div class="col-md-12">
                                                        <input class="form-control form-control-line datepicker" id="fchIniSolicitud" name="fchIniSolicitud" placeholder="dd/mm/aaaa" autocomplete="off">
                                                        @Html.ValidationMessageFor(model => model.fchIniSolicitud, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6 ">
                                                <div class="form-group">
                                                    <label class="col-md-12">@Html.LabelFor(model => model.fchFinSolicitud)</label>
                                                    <div class="col-md-12">
                                                        <input class="form-control form-control-line datepicker" id="fchFinSolicitud" name="fchFinSolicitud" placeholder="dd/mm/aaaa" autocomplete="off">
                                                        @Html.ValidationMessageFor(model => model.fchFinSolicitud, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label class="col-sm-12">Certificado Médico</label>
                                                    <div class="col-sm-12">
                                                        <div class="fileinput input-group fileinput-new" data-provides="fileinput">
                                                            <div class="form-control" data-trigger="fileinput"> <i class="glyphicon glyphicon-file fileinput-exists"></i> <span class="fileinput-filename">Foto.jpeg</span></div>
                                                            <span class="input-group-addon btn btn-default btn-file">
                                                                <span class="fileinput-new">Foto</span> <span class="fileinput-exists">Cambiar</span>
                                                                <input type="hidden" value="" name="..."><input type="file" name="file" onchange="loadFile(event)">
                                                            </span> <a href="#" class="input-group-addon btn btn-default fileinput-exists" data-dismiss="fileinput">Remover</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <div class="el-card-item">
                                                        <div class="el-card-avatar el-overlay-1">
                                                            <img id="output" class="img-responsive" src="@Url.Action("convertirImagen", "DescansoMedRRHH", new {idSolicitudRrhh =Model.idSolicitudRrhh})" />
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <div id='danger' class='alert alert-danger hidden'></div>
                    <div class="panel-group">
                        <div class="col-md-4 tab-content">
                            <div class="col-lg-6 col-sm-4 panel-group">
                                <button class="btn btn-block btn-outline btn-rounded btn-info">Guardar</button>
                            </div>
                            <div class="col-lg-6 col-sm-4">
                                @Html.ActionLink("Volver", "Index", new { menuArea = SessionPersister.ActiveMenu, menuVista = SessionPersister.ActiveVista, pagina = SessionPersister.Pagina, search = SessionPersister.Search }, new { @Class = "btn btn-block btn-outline btn-rounded btn-default" })
                            </div>
                        </div>
                    </div>

                </div>
            }
        </div>
    </div>
</div>

@section scripts
{
    <script src="~/Areas/RRHH/Scripts/RRHH.js"></script>
    @Scripts.Render("~/Bundles/autocompletado_JS")
    @Scripts.Render("~/Bundles/selectBusqueda_JS")
    @Scripts.Render("~/Bundles/datepicker_JS")
    @Scripts.Render("~/Bundles/bloqueo_JS")
    @Scripts.Render("~/Bundles/Magnific_JS")
    @Scripts.Render("~/Bundles/mascara_JS")
    <script src="~/Scripts/js/jasny-bootstrap.js"></script>
    <script src="~/Areas/Sistemas/Scripts/Sistemas.js"></script>

    <script>
        $(document).ready(function () {
            var minDate = getDatesFromNow(-1).toLocaleDateString('es-ES');
            var hoy = getDatesFromNow(0).toLocaleDateString('es-ES');

            $('.datepicker').datepicker({
                format: 'dd/mm/yyyy',
                startDate: minDate,
                autoclose: true
            });

            $('.datepicker').datepicker('setDate', hoy);

            $('#fchIniSolicitud').on('changeDate', function (selected) {
                var startDate = new Date(selected.date.valueOf());
                $('#fchFinSolicitud').datepicker('setStartDate', startDate);
                validateDates();
            });

            $('#fchFinSolicitud').on('changeDate', function (selected) {
                var endDate = new Date(selected.date.valueOf());
                $('#fchIniSolicitud').datepicker('setEndDate', endDate);
                validateDates();
            });

            function getDatesFromNow(days) {
                var date = new Date();
                date.setDate(date.getDate() + days);
                return date;
            }

            function validateDates() {
                var startDate = $('#fchIniSolicitud').datepicker('getDate');
                var endDate = $('#fchFinSolicitud').datepicker('getDate');

                if (startDate && endDate && startDate > endDate) {
                    $('#fchFinSolicitud').datepicker('update', startDate);
                }
                // Calcular la diferencia de días
                var diffTime = endDate.getTime() - startDate.getTime();
                var diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));

                // Mostrar la diferencia de días en el elemento HTML
                $('#diasTotal').text(diffDays + 1);

            }
        });
        var loadFile = function (event) {
            var output = document.getElementById('output');
            output.src = URL.createObjectURL(event.target.files[0]);
        };

    </script>
}